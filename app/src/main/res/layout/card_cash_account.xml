<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:id="@+id/cv_cash_account"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="8dp"
        android:background="#00BCD4"
        android:id="@+id/rl_title_bar">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/iv_category_logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_account_balance_wallet_white_36dp"
            android:layout_marginRight="16dp"
            android:visibility="visible" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/iv_category_logo"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet"
                android:id="@+id/tv_cash_account_name"
                android:textColor="@android:color/background_light"
                android:textSize="16dp"
                android:visibility="visible"
                android:fontFamily="roboto-normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cashAccount"
                android:id="@+id/tv_cash_account_comment"
                android:textColor="@android:color/background_light"
                android:textSize="14dp"
                android:fontFamily="roboto-regular" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_menu"
            android:src="@drawable/ic_more_vert_white_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_main_content"
        android:padding="8dp"
        android:nestedScrollingEnabled="false">

        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="36000"
            android:id="@+id/tv_amount"
            android:textSize="24dp"
            android:layout_gravity="left|top"
            android:gravity="center|right"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/12/12"
            android:id="@+id/tv_date"
            android:gravity="center|left"
            android:layout_below="@+id/tv_amount"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 100000"
            android:id="@+id/tv_operation"
            android:textSize="14dp"
            android:gravity="center|right"
            android:layout_below="@+id/tv_amount"
            android:layout_alignEnd="@+id/tv_amount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$"
            android:id="@+id/tv_currency"
            android:textSize="24dp"
            android:layout_gravity="left|top"
            android:gravity="center|right"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/ll_divider"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/iv_divider"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/ll_action_bar">

            <Button
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:text="РАСХОД"
                android:id="@+id/btn_add_expense"
                android:layout_marginRight="4dp"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14dp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:text="ДОХОД"
                android:id="@+id/btn_add_profit"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginRight="4dp"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>