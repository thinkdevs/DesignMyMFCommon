<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:translationZ="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:padding="16dp"
        android:background="#00BCD4"
        android:id="@+id/rl_tittle_bar">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/iv_account_logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_account_balance_wallet_white_36dp"
            android:layout_marginRight="16dp"
            android:visibility="visible" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/iv_account_logo"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet"
                android:id="@+id/tv_account_name"
                android:textColor="@android:color/background_light"
                android:textSize="16dp"
                android:visibility="visible"
                android:fontFamily="roboto-normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cash"
                android:id="@+id/tv_account_type"
                android:textColor="@android:color/background_light"
                android:textSize="14dp"
                android:fontFamily="roboto-regular" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_menu"
            android:src="@drawable/ic_more_vert_white_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_main_content"
        android:padding="16dp"
        android:nestedScrollingEnabled="false">

        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100000000000"
            android:id="@+id/tv_money"
            android:textSize="24dp"
            android:layout_gravity="left|top"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="today"
            android:id="@+id/tv_date"
            android:layout_below="@+id/tv_money"
            android:layout_alignEnd="@+id/iv_currency" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 500 000"
            android:id="@+id/tv_operation"
            android:textSize="14dp"
            android:layout_below="@+id/tv_money"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/iv_currency"
            android:src="@drawable/ic_attach_money_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_money" />

    </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/ll_divider"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/iv_divider"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/ll_action_bar">

            <Button
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:text="Expense"
                android:id="@+id/btn_expense"
                android:layout_marginRight="4dp"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14dp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:text="PROFIT"
                android:id="@+id/btn_profit"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginRight="4dp"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>